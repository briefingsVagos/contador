<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/counter_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFab">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/new_counter_title_edit_text"
                android:hint="@string/counter_nane_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/new_counter_value_edit_text"
                android:hint="@string/counter_value_input"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_counter_title_edit_text" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/new_counter_color_blue"
                app:backgroundTint="@color/colorBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/new_counter_value_edit_text"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/new_counter_color_green"
                app:backgroundTint="@color/colorGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:layout_toRightOf="@+id/new_counter_color_blue"
                android:layout_toEndOf="@+id/new_counter_color_blue"
                android:layout_below="@+id/new_counter_value_edit_text"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/new_counter_color_red"
                app:backgroundTint="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:layout_toRightOf="@+id/new_counter_color_green"
                android:layout_toEndOf="@+id/new_counter_color_green"
                android:layout_below="@+id/new_counter_value_edit_text"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/new_counter_color_orange"
                app:backgroundTint="@color/colorOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:layout_toRightOf="@+id/new_counter_color_red"
                android:layout_toEndOf="@+id/new_counter_color_red"
                android:layout_below="@+id/new_counter_value_edit_text"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/new_counter_color_yellow"
                app:backgroundTint="@color/colorYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:layout_toRightOf="@+id/new_counter_color_orange"
                android:layout_toEndOf="@+id/new_counter_color_orange"
                android:layout_below="@+id/new_counter_value_edit_text"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/new_counter_ok_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/colorAccent"
                android:text="@string/new_counter_confirm_button" />
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>